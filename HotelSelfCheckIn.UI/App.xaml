<Application x:Class="HotelSelfCheckIn.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodels="clr-namespace:HotelSelfCheckIn.UI.ViewModels"
             xmlns:views="clr-namespace:HotelSelfCheckIn.UI.Views">
    
    <Application.Resources>
        
        <DataTemplate DataType="{x:Type viewmodels:AdminViewModel}">
            <views:AdminView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:RoomManagementViewModel}">
            <views:RoomManagementView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:ClientManagementViewModel}">
            <views:ClientManagementView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:ReservationManagementViewModel}">
            <views:ReservationManagementView/>
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type viewmodels:SettingViewModel}">
            <views:SettingView/>
        </DataTemplate>
        
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Application.Resources>
</Application>