<UserControl x:Class="HotelSelfCheckIn.UI.Views.CCheckInOutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HotelSelfCheckIn.UI.Views"
             mc:Ignorable="d"
             d:DesignHeight="540" d:DesignWidth="780">
    
    <Grid Background="White"
          VerticalAlignment="Center" 
          HorizontalAlignment="Center" 
          Width="450">
        
        <Border Background="#F8F9FA" 
                CornerRadius="15" 
                Padding="30" 
                BorderBrush="#EEE" 
                BorderThickness="1">
            
            <StackPanel>
                <!-->Textul<-->
                <TextBlock Text="Digital Check-in / Out" 
                           FontSize="24"
                           FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,10">
                </TextBlock>
                
                <TextBlock Text="Enter your unique booking code to manage your arrival or departure." 
                           TextWrapping="Wrap" 
                           TextAlignment="Center" 
                           Foreground="Gray" 
                           Margin="0,0,0,25">
                </TextBlock>

                <TextBlock Text="Booking Code"
                           FontWeight="SemiBold" 
                           Margin="0,0,0,5">
                </TextBlock>
                
                <!-->Partea de completare<-->
                <TextBox Text="{Binding BookingCode, UpdateSourceTrigger=PropertyChanged}" 
                         Height="45"
                         VerticalContentAlignment="Center" 
                         FontSize="18"
                         FontWeight="Bold" 
                         TextAlignment="Center" 
                         Margin="0,0,0,20" 
                         CharacterCasing="Upper">
                </TextBox>
                
                <!-->Butoanele<-->
                <UniformGrid Columns="2" Margin="0,10,0,0">
                    
                    <!-->Buton Check-in<-->
                    <Button Content="CHECK-IN" 
                            Command="{Binding CheckInCommand}"
                            Height="45"
                            Margin="5"
                            Background="#00B4D8" 
                            Foreground="White" 
                            FontWeight="Bold"
                            Cursor="Hand">
                    </Button>
                    
                    <!-->Buton Check-out<-->
                    <Button Content="CHECK-OUT"
                            Command="{Binding CheckOutCommand}"
                            Height="45"
                            Margin="5"
                            Background="Black" 
                            Foreground="White" 
                            FontWeight="Bold"
                            Cursor="Hand">
                    </Button>
                </UniformGrid>
                
            </StackPanel>
        </Border>
    </Grid>
</UserControl>