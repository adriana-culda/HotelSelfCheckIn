<UserControl x:Class="HotelSelfCheckIn.UI.Views.AClientListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HotelSelfCheckIn.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="540" d:DesignWidth="780">
    
    <Grid Background="White" Margin="20">
        <StackPanel>
            <TextBlock Text="Registered Clients" 
                       FontSize="22" 
                       FontWeight="Bold" 
                       Margin="0,0,0,20"/>

            <DataGrid ItemsSource="{Binding Clients}" 
                      AutoGenerateColumns="False" 
                      IsReadOnly="True" 
                      Background="Transparent" 
                      BorderThickness="0"
                      GridLinesVisibility="Horizontal"
                      RowHeight="40">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Full Name" 
                                        Binding="{Binding GuestName}" 
                                        Width="1.5*"/>
                    
                    <DataGridTextColumn Header="Email Address" 
                                        Binding="{Binding GuestEmail}" 
                                        Width="2*"/>
                    
                    <DataGridTextColumn Header="Phone Number" 
                                        Binding="{Binding GuestPhone}" 
                                        Width="1*"/>
                    
                    <DataGridTextColumn Header="Account ID" 
                                        Binding="{Binding Username}" 
                                        Width="1*"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</UserControl>