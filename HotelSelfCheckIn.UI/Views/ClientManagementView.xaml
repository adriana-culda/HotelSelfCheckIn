<UserControl x:Class="HotelSelfCheckIn.UI.Views.ClientManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HotelSelfCheckIn.UI.Views"
             mc:Ignorable="d"
             d:DesignHeight="540" d:DesignWidth="780">
    
    <Grid Background="#F5F7FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>    <RowDefinition Height="Auto"/> </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" Margin="20" CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" Direction="270" ShadowDepth="2" Opacity="0.1"/>
            </Border.Effect>

            <DataGrid ItemsSource="{Binding Clients}" 
                      AutoGenerateColumns="False" 
                      CanUserAddRows="False" 
                      GridLinesVisibility="None" 
                      Background="White" 
                      BorderThickness="0"
                      Margin="10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                    <DataGridTextColumn Header="Nume Complet" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                    <DataGridTextColumn Header="Telefon" Binding="{Binding Phone}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,20,20">
            <Button Content="Edit Client" Width="150" Height="35" Margin="5" Background="#90E0EF" BorderThickness="0" FontWeight="Bold"/>
            <Button Content="Remove Client" Width="150" Height="35" Margin="5" Background="#90E0EF" BorderThickness="0" FontWeight="Bold"/>
            <Button Content="Add Client" Width="150" Height="35" Margin="5" Background="#00B4D8" Foreground="White" BorderThickness="0" FontWeight="Bold"/>
        </StackPanel>
    </Grid></UserControl>