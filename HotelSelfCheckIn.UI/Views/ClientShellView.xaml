<UserControl x:Class="HotelSelfCheckIn.UI.Views.ClientShellView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HotelSelfCheckIn.UI.Views"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000">
    
    <Grid>
        
        <!-->Impartirea paginii<-->
        <Grid.ColumnDefinitions> 
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-->Meniul din stanga<-->
        <Border Grid.Column="0" Background="Black">
             
            <StackPanel Margin="0,20">
                
                <!-->Logo<-->
                <Image Source="/Assets/logo.png" 
                       Width="60" 
                       Height="60" 
                       Margin="0,0,0,10" 
                       Stretch="Uniform">
                </Image>
                
                <!-->Text mare sus<-->
                <TextBlock Text="Guest Self-Service" 
                           Foreground="White"
                           FontSize="14"
                           FontWeight="Bold"
                           TextAlignment="Center"
                           Margin="10,0,10,30"
                           TextWrapping="Wrap">
                </TextBlock>
                
                <!-->Buton Dashboard<-->
                <Button Content="Search Rooms"
                        Click="Nav_Click" 
                        Tag="Search"
                        Margin="0,5"
                        Height="40"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        Padding="20,0,0,0">
                </Button>
                
               
                
                <!-->Buton Room<-->
                <Button Content="Check-In / Out"
                        Click="Nav_Click"
                        Tag="CheckInOut"
                        Margin="0,5"
                        Height="40"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        Padding="20,0,0,0">
                </Button>
                
                <!-->Buton Reservation<-->
                <Button Content="My Reservations"
                        Click="Nav_Click"
                        Tag="Manage"
                        Margin="0,5"
                        Height="40"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        Padding="20,0,0,0">
                </Button>
                
                <!-->Buton Setting<-->
                <Button Content="Stay History"
                        Click="Nav_Click" 
                        Tag="History"
                        Margin="0,5"
                        Height="40"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        Padding="20,0,0,0">
                </Button>
                
            </StackPanel>
        </Border>
        
        <Grid Grid.Column="1">
            
            <!-->Impartire bara albastra<-->
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#00B4D8">
                
                <DockPanel Margin="20,0">
                    
                    <!-->Afisare data curenta<-->
                    <TextBlock Text="{Binding CurrentDateTime}"
                               VerticalAlignment="Center"
                               Foreground="White" 
                               FontSize="14"
                               FontWeight="Medium">
                               
                    </TextBlock>
                    
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Center">
                        
                        <!-->Afisare nume admin<-->
                        <TextBlock Text="{Binding ClientName, StringFormat='Welcome: {0}'}"
                                   Foreground="White"
                                   Margin="0,0,20,0" 
                                   VerticalAlignment="Center" 
                                   FontWeight="SemiBold"
                                   FontSize="14">
                        </TextBlock>
                        
                        <!-->Buton Log out<-->
                        <Button Content="Log Out" 
                                Command="{Binding LogoutCommand}"
                                Foreground="White"
                                Background="Transparent"
                                BorderThickness="0" 
                                Cursor="Hand">
                        </Button>
                    </StackPanel>
                    
                </DockPanel>
            </Border>
            
            <!-->Legatura<-->
            <ContentControl Content="{Binding CurrentView}" Grid.Row="1" />
        </Grid>
        
    </Grid>
</UserControl>
