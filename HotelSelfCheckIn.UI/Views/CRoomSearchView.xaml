<UserControl x:Class="HotelSelfCheckIn.UI.Views.CRoomSearchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HotelSelfCheckIn.UI.Views"
             mc:Ignorable="d"
             d:DesignHeight="540" d:DesignWidth="780">
    
    <Grid Background="White"
          Margin="25">
        
        <!-->Impartirea paginii<-->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> 
            <RowDefinition Height="Auto"/> 
            <RowDefinition Height="*"/>    
        </Grid.RowDefinitions>
        
        <!-->Partea cu textul de sus<-->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            
            <!-->Textul mare<-->
            <TextBlock Text="Find Your Perfect Room" 
                       FontSize="26" 
                       FontWeight="Bold"
                       Foreground="#333">
            </TextBlock>
            
            <!-->Textul mic<-->
            <TextBlock Text="Select your stay dates and preferences" 
                       FontSize="14" 
                       Foreground="Gray">
            </TextBlock>
        </StackPanel>
        
        <!-->Partea de completare<-->
        <Border Grid.Row="1" Background="#F8F9FA"
                CornerRadius="10" 
                Padding="15"
                Margin="0,0,0,20">
            
            
            <UniformGrid Columns="4">
                
                <!-->Primul bloc de completare<-->
                <StackPanel Margin="10,0">
                    
                    <TextBlock Text="Check-in Date"
                               FontWeight="SemiBold"
                               Margin="0,0,0,5">
                    </TextBlock>
                    
                    <DatePicker Height="35" 
                                VerticalContentAlignment="Center">
                    </DatePicker>
                </StackPanel>
                
                <!-->Al doilea bloc de completare<-->
                <StackPanel Margin="10,0">
                    
                    <TextBlock Text="Check-out Date" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,5">
                    </TextBlock>
                    
                    <DatePicker Height="35" 
                                VerticalContentAlignment="Center">
                    </DatePicker>
                </StackPanel>
                
                <!-->Primul bloc de completare<-->
                <StackPanel Margin="10,0">
                    
                    <TextBlock Text="Room Type" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,5">
                    </TextBlock>
                    
                    <ComboBox Height="35" 
                              VerticalContentAlignment="Center">
                        <ComboBoxItem Content="Single Room"/>
                        <ComboBoxItem Content="Double Room"/>
                        <ComboBoxItem Content="Triple Room"/>
                        <ComboBoxItem Content="FamilyRoom"/>
                    </ComboBox>
                </StackPanel>

                <!-->Butonul de search<-->
                <Button Content="SEARCH" 
                        Command="{Binding SearchRoomsCommand}"
                        Background="#00B4D8"
                        Foreground="White" 
                        FontWeight="Bold" 
                        Height="35"
                        Margin="10,20,10,0" 
                        Cursor="Hand">
                    
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" 
                                    Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
                
            </UniformGrid>
        </Border>
        
        <!-->Tabelul cu informatii despre camera<-->
        <ScrollViewer Grid.Row="2"
                      VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding AvailableRooms}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#DDD" 
                                BorderThickness="0,0,0,1" 
                                Padding="15"
                                Margin="0,0,0,15"
                                Background="White">
                            
                            <Grid>
                                <!-->Impartirea tabelului<-->
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <!-->Coloana cu detalii despre camera<-->
                                    <TextBlock Text="{Binding RoomName}" 
                                               FontSize="18" 
                                               FontWeight="Bold">
                                    </TextBlock>
                                    
                                    <TextBlock Text="{Binding Description}" 
                                               Foreground="Gray" 
                                               Margin="0,5" 
                                               TextWrapping="Wrap">
                                    </TextBlock>
                                    
                                    <TextBlock Text="{Binding StatusMessage}" 
                                               Visibility="{Binding HasNoResults, Converter={StaticResource BooleanToVisibilityConverter}}"
                                               HorizontalAlignment="Center"
                                               Foreground="Silver" 
                                               FontStyle="Italic">
                                    </TextBlock>
                                </StackPanel>
                                
                                <!-->Coloana cu pretul si selectatul camerei<-->
                                <StackPanel Grid.Column="1"
                                            VerticalAlignment="Center" 
                                            Margin="20,0,0,0">
                                    
                                    <TextBlock Text="{Binding Price, StringFormat='{}{0} â‚¬'}" 
                                               FontSize="20" 
                                               FontWeight="Bold"
                                               Foreground="#00B4D8" 
                                               HorizontalAlignment="Right">
                                    </TextBlock>
                                    
                                    <Button Content="Select Room" 
                                            Command="{Binding DataContext.SelectRoomCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Margin="0,10,0,0"
                                            Width="100" 
                                            Height="35" 
                                            Background="Black"
                                            Foreground="White">
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>