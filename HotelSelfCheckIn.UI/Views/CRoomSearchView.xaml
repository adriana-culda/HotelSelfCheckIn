<UserControl x:Class="HotelSelfCheckIn.UI.Views.CRoomSearchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HotelSelfCheckIn.UI.Views"
             mc:Ignorable="d"
             d:DesignHeight="540" d:DesignWidth="780">
    
    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> 
            <RowDefinition Height="Auto"/> 
            <RowDefinition Height="*"/>    
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            
            <TextBlock Text="Find Your Perfect Room" 
                       FontSize="26" 
                       FontWeight="Bold"
                       Foreground="#333">
            </TextBlock>
            <TextBlock Text="Select your stay dates and preferences" 
                       FontSize="14" 
                       Foreground="Gray">
            </TextBlock>
        </StackPanel>

        <Border Grid.Row="1" Background="#F8F9FA"
                CornerRadius="10" 
                Padding="15"
                Margin="0,0,0,20">
            
            <UniformGrid Columns="4">
                
                <StackPanel Margin="10,0">
                    
                    <TextBlock Text="Check-in Date"
                               FontWeight="SemiBold"
                               Margin="0,0,0,5">
                    </TextBlock>
                    
                    <DatePicker Height="35" 
                                VerticalContentAlignment="Center">
                    </DatePicker>
                </StackPanel>
                
                <StackPanel Margin="10,0">
                    
                    <TextBlock Text="Check-out Date" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,5">
                    </TextBlock>
                    
                    <DatePicker Height="35" 
                                VerticalContentAlignment="Center">
                    </DatePicker>
                </StackPanel>

                <StackPanel Margin="10,0">
                    
                    <TextBlock Text="Room Type" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,5">
                    </TextBlock>
                    
                    <ComboBox Height="35" 
                              VerticalContentAlignment="Center">
                        <ComboBoxItem Content="Single Room"/>
                        <ComboBoxItem Content="Double Room"/>
                        <ComboBoxItem Content="Triple Room"/>
                        <ComboBoxItem Content="FamilyRoom"/>
                    </ComboBox>
                </StackPanel>

                <Button Content="SEARCH" 
                        Background="#00B4D8"
                        Foreground="White" 
                        FontWeight="Bold" 
                        Height="35"
                        Margin="10,20,10,0" 
                        Cursor="Hand">
                    
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" 
                                    Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
                
            </UniformGrid>
        </Border>

        <ScrollViewer Grid.Row="2" 
                      VerticalScrollBarVisibility="Auto">
            <!-->Lista de camere<-->
            <StackPanel x:Name="RoomsContainer">
                
                <Border BorderBrush="#DDD" 
                        BorderThickness="0,0,0,1" 
                        Padding="15"
                        Margin="0,0,0,15">
                    
                    <TextBlock Text="Available rooms will be listed here after you press Search..." 
                               HorizontalAlignment="Center" 
                               Foreground="Silver" 
                               FontStyle="Italic"
                               Margin="20">
                    </TextBlock>
                </Border>
            </StackPanel>
            
        </ScrollViewer>
    </Grid>
</UserControl>