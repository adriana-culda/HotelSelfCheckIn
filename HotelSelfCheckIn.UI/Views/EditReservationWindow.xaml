<Window x:Class="HotelSelfCheckIn.UI.Views.EditReservationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editează Rezervarea" Height="400" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    
    <!-->Partea de completare<-->
    <StackPanel Margin="20">
        
        <TextBlock Text="Client (Read-only):" 
                   Margin="0,0,0,5"
                   FontWeight="Bold">
        </TextBlock>
        
        <TextBox Text="{Binding Username}" 
                 IsReadOnly="True" 
                 Background="#F0F0F0" 
                 Height="30" 
                 Margin="0,0,0,15"
                 Padding="5">
        </TextBox>

        <TextBlock Text="Schimbă Număr Cameră:" 
                   Margin="0,0,0,5" 
                   FontWeight="Bold">
        </TextBlock>
        
        <TextBox Text="{Binding RoomNumber, UpdateSourceTrigger=PropertyChanged}" 
                 Height="30" 
                 Margin="0,0,0,15"
                 Padding="5">
        </TextBox>

        <UniformGrid Columns="2">
            
            <StackPanel Margin="0,0,10,0">
                
                <TextBlock Text="Check-In:" 
                           Margin="0,0,0,5" 
                           FontWeight="Bold">
                </TextBlock>
                
                <DatePicker SelectedDate="{Binding StartDate, UpdateSourceTrigger=PropertyChanged}"/>
                
            </StackPanel>
            
            <StackPanel Margin="10,0,0,0">
                
                <TextBlock Text="Check-Out:" 
                           Margin="0,0,0,5" 
                           FontWeight="Bold">
                </TextBlock>
                
                <DatePicker SelectedDate="{Binding SelectedReservation.EndDate, UpdateSourceTrigger=PropertyChanged}"/>
                
            </StackPanel>
        </UniformGrid>

        <TextBlock Text="Status:" 
                   Margin="15,15,0,5"
                   FontWeight="Bold">
        </TextBlock>
        
        <TextBox Text="{Binding SelectedReservation.Status, UpdateSourceTrigger=PropertyChanged}" 
                 Height="30"
                 Margin="0,0,0,20" 
                 Padding="5">
        </TextBox>

        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            
            <Button Content="Anulează" 
                    IsCancel="True"
                    Width="100" 
                    Height="30" 
                    Margin="0,0,10,0">
            </Button>
            
            <Button Content="Actualizează" 
                    Command="{Binding SaveCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Width="100" Height="30" 
                    Background="#00B4D8" 
                    Foreground="White"
                    FontWeight="Bold">
            </Button>
            
        </StackPanel>
    </StackPanel>
</Window>