<Window x:Class="HotelSelfCheckIn.UI.Views.EditReservationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Modifică Rezervarea" Height="350" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <StackPanel Margin="20">
        <TextBlock Text="Client (Nu se poate modifica):" FontWeight="Bold"/>
        <TextBox x:Name="txtUsername" Height="30" Margin="0,0,0,15" Padding="5" IsReadOnly="True" Background="#EEEEEE"/>

        <TextBlock Text="Număr Cameră:" FontWeight="Bold"/>
        <TextBox x:Name="txtRoomNumber" Height="30" Margin="0,0,0,15" Padding="5"/>

        <TextBlock Text="Check-In Nou:" FontWeight="Bold"/>
        <DatePicker x:Name="dpStart" Margin="0,0,0,15"/>

        <TextBlock Text="Check-Out Nou:" FontWeight="Bold"/>
        <DatePicker x:Name="dpEnd" Margin="0,0,0,20"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Anulează" IsCancel="True" Width="100" Height="30" Margin="0,0,10,0"/>
            <Button Content="Salvează Modificările" Click="Save_Click" Width="140" Height="30" Background="#90E0EF" FontWeight="Bold"/>
        </StackPanel>
    </StackPanel>
</Window>