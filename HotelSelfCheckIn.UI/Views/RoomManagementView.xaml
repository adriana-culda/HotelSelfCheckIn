<UserControl x:Class="HotelSelfCheckIn.UI.Views.RoomManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HotelSelfCheckIn.UI.Views"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000">
   <Grid>
        <Grid.ColumnDefinitions> 
            <ColumnDefinition Width="220"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" Background="Black"> 
            <StackPanel Margin="0,20">
                <Image Source="/Assets/logo.png" 
                       Width="60" 
                       Height="60" 
                       Margin="0,0,0,10" 
                       Stretch="Uniform">
                </Image>
                <TextBlock Text="Hotel Management System" 
                           Foreground="White"
                           FontSize="14"
                           FontWeight="Bold"
                           TextAlignment="Center"
                           Margin="10,0,10,30"
                           TextWrapping="Wrap">
                </TextBlock>
                <Button Content="Dashboard"
                        Margin="0,5"
                        Height="40"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        HorizontalAlignment="Left"
                        Padding="20,0,0,0">
                </Button>
                <Button Content="Client"
                        Margin="0,5"
                        Height="40"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        HorizontalAlignment="Left"
                        Padding="20,0,0,0">
                </Button>
                <Button Content="Room"
                        Margin="0,5"
                        Height="40"
                        Background="#3E3E42"
                        Foreground="White"
                        BorderThickness="0"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        Padding="20,0,0,0">
                </Button>
                <Button Content="Reservation"
                        Margin="0,5"
                        Height="40"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        HorizontalAlignment="Left"
                        Padding="20,0,0,0">
                </Button>
                <Button Content="Setting"
                        Margin="0,5"
                        Height="40"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        HorizontalAlignment="Left"
                        Padding="20,0,0,0">
                </Button>
            </StackPanel>
        </Border>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/> <RowDefinition Height="*"/>  <RowDefinition Height="80"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Background="#00B4D8">
                <DockPanel Margin="20,0">
                    <TextBlock Text="{Binding CurrentDateTime}"
                               VerticalAlignment="Center"
                               Foreground="White"
                               FontSize="13">
                    </TextBlock>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center">
                        <TextBlock Text="{Binding AdminName, StringFormat='Welcome: {0}'}"
                                   Foreground="White"
                                   Margin="0,0,20,0"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold">
                        </TextBlock>
                        <Button Content="Log Out"
                                Foreground="White"
                                Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand">
                        </Button>
                    </StackPanel>
                </DockPanel>
            </Border>
            <Grid Grid.Row="1" Grid.RowSpan="2" Background="#F5F7FA">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/> <RowDefinition Height="Auto"/> </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="White" Margin="20" CornerRadius="10">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15" Direction="270" ShadowDepth="2" Opacity="0.1"/>
                    </Border.Effect>

                    <DataGrid ItemsSource="{Binding Rooms}" 
                              AutoGenerateColumns="False" 
                              CanUserAddRows="False" 
                              GridLinesVisibility="None" 
                              Background="White" 
                              BorderThickness="0"
                              Margin="10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Room No." Binding="{Binding RoomNumber}" Width="*"/>
                            <DataGridTextColumn Header="Room Type" Binding="{Binding Type}" Width="*"/>
                            <DataGridTextColumn Header="Price/Night" Binding="{Binding Price, StringFormat='{}{0} RON'}" Width="*"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
                            <DataGridTemplateColumn Header="Quick Actions" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="ðŸ§¹" ToolTip="Set Cleaning" Margin="2" Background="Transparent" BorderThickness="0"/>
                                            <Button Content="ðŸš«" ToolTip="Set Out of Service" Margin="2" Background="Transparent" BorderThickness="0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>

                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,20,20">
                    <Button Content="Edit Room" Width="150" Height="35" Margin="5" Background="#90E0EF" BorderThickness="0" FontWeight="Bold"/>
                    <Button Content="Remove Room" Width="150" Height="35" Margin="5" Background="#90E0EF" BorderThickness="0" FontWeight="Bold"/>
                    <Button Content="Add Room" Width="150" Height="35" Margin="5" Background="#00B4D8" Foreground="White" BorderThickness="0" FontWeight="Bold"/>
                </StackPanel>
            </Grid>
            
        </Grid>
    </Grid>
</UserControl>
