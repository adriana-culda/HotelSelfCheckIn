<UserControl x:Class="HotelSelfCheckIn.UI.Views.RoomManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HotelSelfCheckIn.UI.Views"
             mc:Ignorable="d"
             d:DesignHeight="540" d:DesignWidth="780">
    
    <Grid Background="#F5F7FA">
         
        <!-->Impartirea paginii<-->
        <Grid.RowDefinitions>
           <RowDefinition Height="*"/> 
           <RowDefinition Height="Auto"/>
       </Grid.RowDefinitions>
        
        <!-->Partea cu tabel<-->
       <Border Grid.Row="0" 
               Background="White" 
               Margin="20" 
               CornerRadius="10">
           
           <Border.Effect>
               <DropShadowEffect BlurRadius="15" 
                                 Direction="270" 
                                 ShadowDepth="2" 
                                 Opacity="0.1">
               </DropShadowEffect>
           </Border.Effect>
            
           <!-->Informatii despre camera<-->
           <DataGrid ItemsSource="{Binding Rooms}" 
                     SelectedItem="{Binding SelectedRoom}"
                     IsReadOnly="True"
                     AutoGenerateColumns="False" 
                     CanUserAddRows="False" 
                     GridLinesVisibility="None" 
                     Background="White" 
                     BorderThickness="0"
                     Margin="10">
                <DataGrid.Columns>
                    
                    <!-->Coloana Room No.<-->
                    <DataGridTextColumn Header="Room No." 
                                        Binding="{Binding Number}" 
                                        Width="*">
                    </DataGridTextColumn>
                    
                    <!-->Coloana Room Type<-->
                    <DataGridTextColumn Header="Room Type" 
                                        Binding="{Binding Type}" 
                                        Width="*">
                    </DataGridTextColumn>
                    
                    <!-->Coloana Price<-->
                    <DataGridTextColumn Header="Price/Night" 
                                        Binding="{Binding PricePerNight,
                                                 StringFormat='{}{0} RON'}" 
                                        Width="*">
                    </DataGridTextColumn>
                    
                    <!-->Coloana Status<-->
                    <DataGridTextColumn Header="Status" 
                                        Binding="{Binding Status}"
                                        Width="*">
                    </DataGridTextColumn>
                    
                    <!-->Coloana de modificare status<-->
                    <DataGridTemplateColumn Header="Quick Actions" 
                                            Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                                    
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    
                                    <!-->Tipuri de status<-->
                                    <Button Content="ðŸ§¹" 
                                            ToolTip="Set Cleaning" 
                                            Command="{Binding DataContext.SetCleaningCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Margin="2" 
                                            Background="Transparent"
                                            BorderThickness="0">
                                    </Button>
                                    
                                    <Button Content="ðŸš«"
                                            ToolTip="Set Out of Service"
                                            Command="{Binding DataContext.SetMaintenanceCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Margin="2" 
                                            Background="Transparent" 
                                            BorderThickness="0">
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                                    
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                            
                </DataGrid.Columns>
           </DataGrid>
       </Border>
        
       <!-->Butoanele de jos<-->
       <StackPanel Grid.Row="1" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right" 
                   Margin="0,0,20,20">
           
           <!-->Buton edit<-->
           <Button Content="Edit Room" 
                   Command="{Binding EditRoomCommand}"
                   Width="150" 
                   Height="35"
                   Margin="5"
                   Background="#90E0EF" 
                   BorderThickness="0" 
                   FontWeight="Bold">
           </Button>
           
           <!-->Buton remove<-->
           <Button Content="Remove Room"
                   Command="{Binding RemoveRoomCommand}"
                   CommandParameter="{Binding SelectedRoom}"
                   Width="150" 
                   Height="35"
                   Margin="5" 
                   Background="#90E0EF" 
                   BorderThickness="0"
                   FontWeight="Bold">
           </Button>
           
           <!-->Buton add<-->
           <Button Content="Add Room"
                   Command="{Binding AddRoomCommand}"
                   Width="150" 
                   Height="35"
                   Margin="5" 
                   Background="#00B4D8" 
                   Foreground="White" 
                   BorderThickness="0"
                   FontWeight="Bold">
           </Button>
       </StackPanel>
        
    </Grid>
</UserControl>
