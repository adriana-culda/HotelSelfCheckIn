<Window x:Class="HotelSelfCheckIn.UI.Views.AddClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Adauga Client Nou" Height="300" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    
    <!-->Partea de completare<-->
    <StackPanel Margin="20">
        
        <TextBlock Text="Nume Complet:" 
                   Margin="0,0,0,5" 
                   FontWeight="Bold">
        </TextBlock>
        
        <TextBox Text="{Binding NewClient.Name, UpdateSourceTrigger=PropertyChanged}" 
                 Height="30" 
                 Margin="0,0,0,15" 
                 Padding="5">
        </TextBox>

        <TextBlock Text="Email:" 
                   Margin="0,0,0,5" 
                   FontWeight="Bold">
        </TextBlock>
        
        <TextBox Text="{Binding NewClient.Email, UpdateSourceTrigger=PropertyChanged}" 
                 Height="30" 
                 Margin="0,0,0,15" 
                 Padding="5">
        </TextBox>

        <TextBlock Text="Numar Telefon:" 
                   Margin="0,0,0,5" 
                   FontWeight="Bold">
        </TextBlock>
        
        <TextBox Text="{Binding NewClient.Phone, UpdateSourceTrigger=PropertyChanged}" 
                 Height="30"
                 Margin="0,0,0,20" 
                 Padding="5">
        </TextBox>

        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            
            <Button Content="Anuleaza" 
                    IsCancel="True" 
                    Width="100" 
                    Height="30"
                    Margin="0,0,10,0">
            </Button>
            
            <Button Content="Salveaza" 
                    Command="{Binding SaveClientCommand}" 
                    Width="100" Height="30" 
                    Background="#00B4D8" 
                    Foreground="White"
                    FontWeight="Bold">
            </Button>
        </StackPanel>
    </StackPanel>
</Window>