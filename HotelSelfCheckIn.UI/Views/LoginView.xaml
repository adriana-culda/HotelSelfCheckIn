<UserControl x:Class="HotelSelfCheckIn.UI.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HotelSelfCheckIn.UI.Views"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="400">
    
    <Grid Background="White">
        
        <StackPanel VerticalAlignment="Center" 
                    HorizontalAlignment="Center" 
                    Width="300">
            
            <!-->Logo<-->
            <Image Source="pack://application:,,,/Assets/logo.png"
                   Width="100" 
                   Height="100" 
                   Margin="0,0,0,20">
            </Image>
            
            <!-->Eticheta text<-->
            <TextBlock Text="Username" 
                       Foreground="Gray" 
                       FontSize="12" 
                       Margin="0,10,0,0">
            </TextBlock> 
            
            <!-->Scriere Username<-->
            <TextBox Text="{Binding Username}" 
                     FontSize="16" 
                     BorderThickness="0,0,0,1" 
                     BorderBrush="LightGray" 
                     Margin="0,0,0,15">
            </TextBox> <!--> {Binding Username} ia textul si il trimite <-->
            
            <!-->Eticheta text<-->
            <TextBlock Text="Password" 
                       Foreground="Gray" 
                       FontSize="12" 
                       Margin="0,10,0,0">
            </TextBlock>
            
            <!-->Scriere Password<-->
            <PasswordBox FontSize="16"
                         BorderThickness="0,0,0,1"
                         BorderBrush="LightGray" 
                         Margin="0,0,0,25">
            </PasswordBox>
            
            <!-->Buton Log in<-->
            <Button Content="LOG IN" 
                    Background="Black" 
                    Foreground="White"
                    Height="40" 
                    FontWeight="Bold" 
                    Command="{Binding LoginCommand}">
                
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" 
                                Value="8">
                        </Setter>
                    </Style>
                </Button.Resources>
                
            </Button>
            
            <!-->Partea de erori<-->
            <TextBlock Text="{Binding ErrorMessage}" 
                       Foreground="Red" 
                       HorizontalAlignment="Center" 
                       Margin="0,10,0,0">
            </TextBlock>
        </StackPanel>
        
    </Grid>
</UserControl>