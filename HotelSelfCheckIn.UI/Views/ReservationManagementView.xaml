<UserControl x:Class="HotelSelfCheckIn.UI.Views.ReservationManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HotelSelfCheckIn.UI.Views"
             mc:Ignorable="d"
             d:DesignHeight="540" d:DesignWidth="780">
    
    <Grid Background="#F5F7FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <RowDefinition Height="*"/>    <RowDefinition Height="Auto"/> 
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="25,15,20,0">
            <RadioButton Content="Active Reservations" 
                         IsChecked="True" 
                         Command="{Binding ShowActiveCommand}" 
                         Margin="0,0,20,0" 
                         Foreground="#34495E" FontWeight="Bold" Cursor="Hand"/>
            
            <RadioButton Content="History" 
                         Command="{Binding ShowHistoryCommand}"
                         Foreground="#34495E" FontWeight="Bold" Cursor="Hand"/>
        </StackPanel>

        <Border Grid.Row="1" Background="White" Margin="20" CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" Direction="270" ShadowDepth="2" Opacity="0.1"/>
            </Border.Effect>

            <DataGrid ItemsSource="{Binding Reservations}" 
                      SelectedItem="{Binding SelectedReservation}"
                      AutoGenerateColumns="False" 
                      CanUserAddRows="False" 
                      GridLinesVisibility="None" 
                      Background="White" 
                      BorderThickness="0"
                      Margin="10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding ReservationID}" Width="50"/>
                    <DataGridTextColumn Header="Client Name" Binding="{Binding Username}" Width="*"/>
                    <DataGridTextColumn Header="Room No." Binding="{Binding RoomNumber}" Width="80"/>
                    <DataGridTextColumn Header="Check-In" Binding="{Binding StartDate, StringFormat=\{0:dd-MMM-yyyy\}}" Width="*"/>
                    <DataGridTextColumn Header="Check-Out" Binding="{Binding EndDate, StringFormat=\{0:dd-MMM-yyyy\}}" Width="*"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                    
                    <DataGridTemplateColumn Header="Update Status" Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    
                                    <Button Content="✅" ToolTip="Complete" FontSize="14" Margin="3,0" Background="Transparent" BorderThickness="0" Cursor="Hand"
                                            Command="{Binding DataContext.CompleteReservationCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding ReservationID}"/>

                                    <Button Content="❌" ToolTip="Cancel" FontSize="14" Margin="3,0" Background="Transparent" BorderThickness="0" Cursor="Hand"
                                            Command="{Binding DataContext.CancelReservationCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding ReservationID}"/>
                                    
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,20,20">
            
            <Button Content="Edit Reservation" 
                    Command="{Binding EditReservationCommand}"
                    Width="150" Height="35" Margin="5" Background="#90E0EF" BorderThickness="0" FontWeight="Bold"/>
            
            <Button Content="Cancel Reservation" 
                    Command="{Binding CancelSelectedCommand}"
                    Width="150" Height="35" Margin="5" Background="#90E0EF" BorderThickness="0" FontWeight="Bold"/>
            
        </StackPanel>
    </Grid>
</UserControl>