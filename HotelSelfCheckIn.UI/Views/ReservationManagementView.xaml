<UserControl x:Class="HotelSelfCheckIn.UI.Views.ReservationManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HotelSelfCheckIn.UI.Views"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid>
        <Grid.ColumnDefinitions> 
            <ColumnDefinition Width="220"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" Background="Black"> 
            <StackPanel Margin="0,20">
                <Image Source="/Assets/logo.png" 
                       Width="60" 
                       Height="60" 
                       Margin="0,0,0,10" 
                       Stretch="Uniform">
                </Image>
                <TextBlock Text="Hotel Management System" 
                           Foreground="White"
                           FontSize="14"
                           FontWeight="Bold"
                           TextAlignment="Center"
                           Margin="10,0,10,30"
                           TextWrapping="Wrap">
                </TextBlock>
                <Button Content="Dashboard"
                        Margin="0,5"
                        Height="40"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        HorizontalAlignment="Left"
                        Padding="20,0,0,0">
                </Button>
                <Button Content="Client"
                        Margin="0,5"
                        Height="40"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        HorizontalAlignment="Left"
                        Padding="20,0,0,0">
                </Button>
                <Button Content="Room"
                        Margin="0,5"
                        Height="40"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        HorizontalAlignment="Left"
                        Padding="20,0,0,0">
                </Button>
                <Button Content="Reservation"
                        Margin="0,5"
                        Height="40"
                        Background="#3E3E42"
                        Foreground="White"
                        BorderThickness="0"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        Padding="20,0,0,0">
                </Button>
                <Button Content="Setting"
                        Margin="0,5"
                        Height="40"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        HorizontalAlignment="Left"
                        Padding="20,0,0,0">
                </Button>
            </StackPanel>
        </Border>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/> <RowDefinition Height="*"/>  <RowDefinition Height="80"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Background="#00B4D8">
                <DockPanel Margin="20,0">
                    <TextBlock Text="{Binding CurrentDateTime}"
                               VerticalAlignment="Center"
                               Foreground="White"
                               FontSize="13">
                    </TextBlock>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center">
                        <TextBlock Text="{Binding AdminName, StringFormat='Welcome: {0}'}"
                                   Foreground="White"
                                   Margin="0,0,20,0"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold">
                        </TextBlock>
                        <Button Content="Log Out"
                                Foreground="White"
                                Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand">
                        </Button>
                    </StackPanel>
                </DockPanel>
            </Border>
            
            <Grid Grid.Row="1" Grid.RowSpan="2" Background="#F5F7FA">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <RowDefinition Height="*"/>    <RowDefinition Height="Auto"/> </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="25,15,20,0">
                    <RadioButton Content="Active Reservations" 
                                 IsChecked="True" 
                                 Margin="0,0,20,0" 
                                 Foreground="#34495E" 
                                 FontWeight="Bold"
                                 Cursor="Hand"/>
                    <RadioButton Content="History" 
                                 Foreground="#34495E" 
                                 FontWeight="Bold"
                                 Cursor="Hand"/>
                </StackPanel>

                <Border Grid.Row="1" Background="White" Margin="20" CornerRadius="10">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15" Direction="270" ShadowDepth="2" Opacity="0.1"/>
                    </Border.Effect>

                    <DataGrid ItemsSource="{Binding Reservations}" 
                              AutoGenerateColumns="False" 
                              CanUserAddRows="False" 
                              GridLinesVisibility="None" 
                              Background="White" 
                              BorderThickness="0"
                              Margin="10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="Client Name" Binding="{Binding ClientName}" Width="*"/>
                            <DataGridTextColumn Header="Room No." Binding="{Binding RoomNumber}" Width="80"/>
    
                            <DataGridTextColumn Header="Check-In" Binding="{Binding CheckInDate, StringFormat=\{0:dd-MMM-yyyy\}}" Width="*"/>
                            <DataGridTextColumn Header="Check-Out" Binding="{Binding CheckOutDate, StringFormat=\{0:dd-MMM-yyyy\}}" Width="*"/>
    
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>

                            <DataGridTemplateColumn Header="Update Status" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="✅" ToolTip="Complete" FontSize="14" Margin="3,0" Background="Transparent" BorderThickness="0" Cursor="Hand"/>
                                            <Button Content="❌" ToolTip="Cancel" FontSize="14" Margin="3,0" Background="Transparent" BorderThickness="0" Cursor="Hand"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,20,20">
                    <Button Content="Edit Reservation" Width="150" Height="35" Margin="5" Background="#90E0EF" BorderThickness="0" FontWeight="Bold"/>
                    <Button Content="Cancel Reservation" Width="150" Height="35" Margin="5" Background="#90E0EF" BorderThickness="0" FontWeight="Bold"/>
                    <Button Content="Add Reservation" Width="150" Height="35" Margin="5" Background="#00B4D8" Foreground="White" BorderThickness="0" FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
