<Window x:Class="HotelSelfCheckIn.UI.Views.AddReservationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Adaugă Rezervare Nouă" Height="350" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    
    <StackPanel Margin="20">
        <TextBlock Text="Nume Client (Username):" Margin="0,0,0,5" FontWeight="Bold"/>
        <TextBox x:Name="txtUsername" Height="30" Margin="0,0,0,15" Padding="5"/>

        <TextBlock Text="Număr Cameră:" Margin="0,0,0,5" FontWeight="Bold"/>
        <TextBox x:Name="txtRoomNumber" Height="30" Margin="0,0,0,15" Padding="5"/>

        <TextBlock Text="Check-In Date:" Margin="0,0,0,5" FontWeight="Bold"/>
        <DatePicker x:Name="dpStart" Margin="0,0,0,15"/>

        <TextBlock Text="Check-Out Date:" Margin="0,0,0,5" FontWeight="Bold"/>
        <DatePicker x:Name="dpEnd" Margin="0,0,0,20"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Anulează" IsCancel="True" Width="100" Height="30" Margin="0,0,10,0"/>
            <Button Content="Salvează" Click="Save_Click" Width="100" Height="30" Background="#00B4D8" Foreground="White" FontWeight="Bold"/>
        </StackPanel>
    </StackPanel>
</Window>