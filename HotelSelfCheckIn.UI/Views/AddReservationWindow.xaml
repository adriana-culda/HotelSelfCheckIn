<Window x:Class="HotelSelfCheckIn.UI.Views.AddReservationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Adaugă Rezervare Nouă" Height="400" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    
    <!-->Partea de completare<-->
    <StackPanel Margin="20">
        
        <TextBlock Text="Nume Client:"
                   Margin="0,0,0,5" 
                   FontWeight="Bold">
        </TextBlock>
        
        <TextBox Text="{Binding NewReservation.Name, UpdateSourceTrigger=PropertyChanged}" 
                 Height="30" 
                 Margin="0,0,0,15" 
                 Padding="5">
        </TextBox>

        <TextBlock Text="Număr Cameră:" 
                   Margin="0,0,0,5"
                   FontWeight="Bold">
        </TextBlock>
        
        <TextBox Text="{Binding NewReservation.RoomNumber, UpdateSourceTrigger=PropertyChanged}" 
                 Height="30" 
                 Margin="0,0,0,15" 
                 Padding="5">
        </TextBox>

        <UniformGrid Columns="2">
            
            <StackPanel Margin="0,0,10,0">
                
                <TextBlock Text="Check-In:" 
                           Margin="0,0,0,5"
                           FontWeight="Bold">
                </TextBlock>
                
                <DatePicker SelectedDate="{Binding NewReservation.CheckInDate, UpdateSourceTrigger=PropertyChanged}" 
                            Margin="0,0,0,15">
                </DatePicker>
            </StackPanel>
            
            <StackPanel Margin="10,0,0,0">
                
                <TextBlock Text="Check-Out:" 
                           Margin="0,0,0,5" 
                           FontWeight="Bold">
                </TextBlock>
                
                <DatePicker SelectedDate="{Binding NewReservation.CheckOutDate, UpdateSourceTrigger=PropertyChanged}" 
                            Margin="0,0,0,15">
                </DatePicker>
            </StackPanel>
            
        </UniformGrid>

        <TextBlock Text="Status Inițial:" 
                   Margin="0,5,0,5"
                   FontWeight="Bold">
        </TextBlock>
        
        <TextBox Text="{Binding NewReservation.Status}" 
                 Height="30"
                 IsEnabled="False" 
                 Margin="0,0,0,20"
                 Padding="5">
        </TextBox>

        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            
            <Button Content="Anulează" 
                    IsCancel="True" 
                    Width="100"
                    Height="30" 
                    Margin="0,0,10,0">
            </Button>
            
            <Button Content="Salvează" 
                    Command="{Binding SaveReservationCommand}" 
                    Width="100" Height="30" 
                    Background="#00B4D8" 
                    Foreground="White" 
                    FontWeight="Bold">
            </Button>
            
        </StackPanel>
    </StackPanel>
</Window>