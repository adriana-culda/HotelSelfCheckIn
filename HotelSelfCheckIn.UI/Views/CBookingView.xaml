<UserControl x:Class="HotelSelfCheckIn.UI.Views.CBookingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HotelSelfCheckIn.UI.Views"
             mc:Ignorable="d"
             d:DesignHeight="540" d:DesignWidth="780">
    
    <Grid Background="White" 
          Margin="20">
        
        <!-->Impartirea paginii<-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/> 
            <ColumnDefinition Width="280"/>
        </Grid.ColumnDefinitions>

        <!-->Partea de completat<-->
        <StackPanel Grid.Column="0"
                    Margin="0,0,20,0">
            
            <!-->Textul mare<-->
            <TextBlock Text="Complete Your Booking"
                       FontSize="22"
                       FontWeight="Bold"
                       Margin="0,0,0,20">
            </TextBlock>

            
            <TextBlock Text="Full Name" 
                       FontWeight="SemiBold" 
                       Margin="0,0,0,5">
            </TextBlock>
            
            <!-->Completare nume<-->
            <TextBox Text="{Binding GuestName, UpdateSourceTrigger=PropertyChanged}"
                     Height="35" 
                     VerticalContentAlignment="Center" 
                     Margin="0,0,0,15"
                     Padding="5,0">
            </TextBox>
            
            <TextBlock Text="Email Address"
                       FontWeight="SemiBold" 
                       Margin="0,0,0,5">
            </TextBlock>
            
            <!-->Completare email<-->
            <TextBox Text="{Binding GuestEmail, UpdateSourceTrigger=PropertyChanged}"
                     Height="35"
                     VerticalContentAlignment="Center"
                     Margin="0,0,0,15"
                     Padding="5,0">
            </TextBox>

            <TextBlock Text="Phone Number" 
                       FontWeight="SemiBold"
                       Margin="0,0,0,5">
            </TextBlock>
            
            <!-->Completare numar telefon<-->
            <TextBox Text="{Binding GuestPhone, UpdateSourceTrigger=PropertyChanged}"
                     Height="35"
                     VerticalContentAlignment="Center" 
                     Margin="0,0,0,15"
                     Padding="5,0">
            </TextBox>

            <TextBlock Text="Special Requests" 
                       FontWeight="SemiBold" 
                       Margin="0,0,0,5">
            </TextBlock>
            
            <!-->Completare informatii<-->
            <TextBox Text="{Binding SpecialRequests, UpdateSourceTrigger=PropertyChanged}"
                     Height="80" 
                     TextWrapping="Wrap"
                     AcceptsReturn="True" 
                     Padding="5">
            </TextBox>
        </StackPanel>
        
        <!-->Partea de afisare a datelor<-->
        <Border Grid.Column="1" 
                Background="#F8F9FA" 
                CornerRadius="10" 
                Padding="15">
            <StackPanel>
                
                <!-->Textul mare de sus<-->
                <TextBlock Text="Booking Summary" 
                           FontSize="18"
                           FontWeight="Bold" 
                           Margin="0,0,0,15">
                </TextBlock>
                
                <Separator Margin="0,0,0,15"
                           Background="#DDD">
                </Separator>

                <TextBlock Text="Selected Room:"
                           Foreground="Gray" 
                           FontSize="12">
                </TextBlock>
                
                <!-->Camera aleasa<-->
                <TextBlock Text="{Binding SelectedRoom.Name}" 
                           FontWeight="Bold"
                           Margin="0,0,0,10" >
                </TextBlock>
    
                <TextBlock Text="Check-in Date:"
                           Foreground="Gray"
                           FontSize="12">
                </TextBlock>
                
                <!-->Data aleasa<-->
                <TextBlock Text="{Binding ArrivalDate, StringFormat=d}" 
                           FontWeight="Bold" 
                           Margin="0,0,0,10">
                </TextBlock>

                <TextBlock Text="Total Price:"
                           Foreground="Gray" 
                           FontSize="12" 
                           Margin="0,10,0,0">
                </TextBlock>
                
                <!-->Afisarea pretului<-->
                <TextBlock Text="{Binding TotalAmount, StringFormat='{}{0:C}'}"
                           FontSize="24"
                           FontWeight="Bold" 
                           Foreground="#00B4D8" 
                           Margin="0,0,0,20">
                </TextBlock>
                
                <!-->Butonul de confirmare<-->
                <Button Content="CONFIRM BOOKING"
                        Click="BtnConfirm_Click" 
                        Height="45" 
                        Background="Black"
                        Foreground="White" 
                        FontWeight="Bold" 
                        Cursor="Hand">
                    
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" 
                                    Value="5">
                            </Setter>
                        </Style>
                    </Button.Resources>
                    
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>