<UserControl x:Class="HotelSelfCheckIn.UI.Views.AdminShellView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HotelSelfCheckIn.UI.Views"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid>
        <Grid.ColumnDefinitions> 
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" Background="Black"> 
            <StackPanel Margin="0,20">
                <Image Source="/Assets/logo.png" 
                       Width="60" 
                       Height="60" 
                       Margin="0,0,0,10" 
                       Stretch="Uniform">
                </Image>
                <TextBlock Text="Hotel Management System" 
                           Foreground="White"
                           FontSize="14"
                           FontWeight="Bold"
                           TextAlignment="Center"
                           Margin="10,0,10,30"
                           TextWrapping="Wrap">
                </TextBlock>
                <Button Content="Dashboard"
                        Click="Nav_Click" 
                        Tag="Dashboard"
                        Margin="0,5"
                        Height="40"
                        Background="#3E3E42"
                        Foreground="White"
                        BorderThickness="0"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        Padding="20,0,0,0">
                </Button>
                <Button Content="Client"
                        Click="Nav_Click" 
                        Tag="Client"
                        Margin="0,5"
                        Height="40"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        HorizontalAlignment="Left"
                        Padding="20,0,0,0">
                </Button>
                <Button Content="Room"
                        Click="Nav_Click"
                        Tag="Room"
                        Margin="0,5"
                        Height="40"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        HorizontalAlignment="Left"
                        Padding="20,0,0,0">
                </Button>
                <Button Content="Reservation"
                        Click="Nav_Click"
                        Tag="Reservation"
                        Margin="0,5"
                        Height="40"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        HorizontalAlignment="Left"
                        Padding="20,0,0,0">
                </Button>
                <Button Content="Setting"
                        Click="Nav_Click" 
                        Tag="Setting"
                        Margin="0,5"
                        Height="40"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        HorizontalAlignment="Left"
                        Padding="20,0,0,0">
                </Button>
            </StackPanel>
        </Border>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#00B4D8">
                <DockPanel Margin="20,0">
                    <TextBlock Text="{Binding CurrentDateTime}" VerticalAlignment="Center" Foreground="White" FontSize="13"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <TextBlock Text="{Binding AdminName, StringFormat='Welcome: {0}'}" Foreground="White" Margin="0,0,20,0" VerticalAlignment="Center" FontWeight="SemiBold"/>
                        <Button Content="Log Out" Foreground="White" Background="Transparent" BorderThickness="0" Cursor="Hand"/>
                    </StackPanel>
                </DockPanel>
            </Border>
            <ContentControl x:Name="AdminContentDisplay" Grid.Row="1" />
        </Grid>
    </Grid>
</UserControl>
