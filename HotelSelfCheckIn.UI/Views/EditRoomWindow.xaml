<Window x:Class="HotelSelfCheckIn.UI.Views.EditRoomWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editeaza Camera" Height="350" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    
    <!-->Partea de completare<-->
    <StackPanel Margin="20">
        
        <TextBlock Text="Numar Camera:"
                   Margin="0,0,0,5"
                   FontWeight="Bold">
        </TextBlock>
        
        <TextBox Text="{Binding SelectedRoom.RoomNumber, UpdateSourceTrigger=PropertyChanged}" 
                 Height="30" 
                 Margin="0,0,0,15" 
                 Padding="5">
        </TextBox>

        <TextBlock Text="Tip Camera:" 
                   Margin="0,0,0,5"
                   FontWeight="Bold">
        </TextBlock>
        
        <TextBox Text="{Binding SelectedRoom.Type, UpdateSourceTrigger=PropertyChanged}" 
                 Height="30" 
                 Margin="0,0,0,15"
                 Padding="5">
        </TextBox>

        <TextBlock Text="Status Camera:" Margin="0,0,0,5" FontWeight="Bold"/>
        <ComboBox ItemsSource="{Binding StatusList}"
                  SelectedItem="{Binding SelectedRoom.Status}"
                  Height="30" Margin="0,0,0,20" Padding="5"/>

        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            
            <Button Content="Anuleaza" 
                    IsCancel="True"
                    Width="100" 
                    Height="30" 
                    Margin="0,0,10,0">
            </Button>
            
            <Button Content="Salveaza" 
                    Command="{Binding SaveEditRoomCommand}" 
                    Width="100" Height="30" 
                    Background="#00B4D8"
                    Foreground="White" 
                    FontWeight="Bold">
            </Button>
        </StackPanel>
    </StackPanel>
</Window>