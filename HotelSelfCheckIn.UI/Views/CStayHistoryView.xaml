<UserControl x:Class="HotelSelfCheckIn.UI.Views.CStayHistoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HotelSelfCheckIn.UI.Views"
             mc:Ignorable="d"
             d:DesignHeight="540" d:DesignWidth="780">
    
    <Grid Background="White"
          Margin="20">
        
        <StackPanel>
            
            <!-->Textul de sus<-->
            <TextBlock Text="Stay History"
                       FontSize="22" 
                       FontWeight="Bold" 
                       Margin="0,0,0,20">
            </TextBlock>
            
            <TextBlock Text="No previous stays found in your account."
                       Visibility="{Binding HasNoHistory, Converter={StaticResource BooleanToVisibilityConverter}}"
                       Foreground="Gray"
                       FontStyle="Italic"
                       HorizontalAlignment="Center"
                       Margin="0,20">
            </TextBlock>
            
            <!-->Tabel istoric<-->
            <DataGrid ItemsSource="{Binding PastStays}"
                      AutoGenerateColumns="False" 
                      IsReadOnly="True" 
                      Background="Transparent" 
                      BorderThickness="0">
                
                <DataGrid.Columns>
                    
                    <!-->Coloana cu data<-->
                    <DataGridTextColumn Header="Date" 
                                        Binding="{Binding Date, StringFormat=d}" 
                                        Width="*">
                    </DataGridTextColumn>
                    
                    <!-->Coloana cu camera<-->
                    <DataGridTextColumn Header="Room"
                                        Binding="{Binding RoomName}" 
                                        Width="*">
                    </DataGridTextColumn>
                    
                    <!-->Coloana cu pretul<-->
                    <DataGridTextColumn Header="Total Paid" 
                                        Binding="{Binding TotalPaid, StringFormat='{}{0} â‚¬'}"
                                        Width="*">
                    </DataGridTextColumn>
                    
                    <!-->Coloana cu statusul<-->
                    <DataGridTextColumn Header="Status"
                                        Binding="{Binding Status}"
                                        Width="*">
                    </DataGridTextColumn>
                    
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</UserControl>