<UserControl x:Class="HotelSelfCheckIn.UI.Views.SettingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HotelSelfCheckIn.UI.Views"
             mc:Ignorable="d"
             d:DesignHeight="540" d:DesignWidth="780">

    <Grid Background="#F5F7FA">
        
        <Border Background="White"
                CornerRadius="12" 
                Margin="25" 
                Padding="25">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" 
                                  ShadowDepth="1" 
                                  Opacity="0.05"/>
            </Border.Effect>

            <Grid>
                
                <!-->Impartirea paginii<-->
                <Grid.RowDefinitions> 
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/> 
                    <RowDefinition Height="Auto"/> 
                    <RowDefinition Height="Auto"/> 
                    <RowDefinition Height="*"/>   
                    <RowDefinition Height="Auto"/> 
                </Grid.RowDefinitions>
                
                <!-->Text mare sus<-->
                <TextBlock Grid.Row="0" 
                           Text="Configurarea Regulilor Generale" 
                           FontSize="20" 
                           FontWeight="SemiBold" 
                           Foreground="#34495E" 
                           Margin="0,0,0,15">
                </TextBlock>
                
                <!-->Partea de Check-in si Check-out<-->
                <UniformGrid Grid.Row="1" 
                             Columns="2" 
                             Margin="0,0,0,15">
                    
                    <!-->Partea de Check-in<-->
                    <StackPanel Margin="0,0,10,0">
                        
                        <Label Content="Oră Check-in (ex: 14:00):" 
                               Padding="0,5">
                        </Label>
                        
                        <!-->Scriere Check-in<-->
                        <TextBox Text="{Binding CheckInTime}" 
                                 Height="32" 
                                 VerticalContentAlignment="Center" 
                                 Padding="5,0">
                        </TextBox>
                    </StackPanel>
                    
                    <!-->Partea de Check-out<-->
                    <StackPanel Margin="10,0,0,0">
                        
                        <Label Content="Oră Check-out (ex: 11:00):" 
                               Padding="0,5">
                        </Label>
                        
                        <!-->Scriere Check-out<-->
                        <TextBox Text="{Binding CheckOutTime}" 
                                 Height="32" 
                                 VerticalContentAlignment="Center" 
                                 Padding="5,0">
                        </TextBox>
                    </StackPanel>
                </UniformGrid>

                <!-->Text mare mijloc<-->
                <TextBlock Grid.Row="2" 
                           Text="Alte limitări și reguli" 
                           FontSize="18" 
                           FontWeight="SemiBold" 
                           Foreground="#34495E" 
                           Margin="0,0,0,10">
                </TextBlock> 
                
                <!-->Partea de durata<-->
                <StackPanel Grid.Row="3" 
                            Orientation="Horizontal" 
                            Margin="0,0,0,15">
                    
                    <Label Content="Durată minimă rezervare (zile):" 
                           VerticalAlignment="Center">
                    </Label>
                    
                    <!-->Scriere durata<-->
                    <TextBox Text="{Binding MinDays}" 
                             Width="60"
                             Height="32" 
                             Margin="10,0,0,0" 
                             VerticalContentAlignment="Center" 
                             HorizontalContentAlignment="Center">
                    </TextBox>
                </StackPanel>
                
                <!-->Partea de reguli<-->
                <DockPanel Grid.Row="4" 
                           Margin="0,5,0,15">
                    
                    <Label DockPanel.Dock="Top" 
                           Content="Reguli generale hotel:">
                    </Label>
                    
                    <!-->Scriere reguli<-->
                    <TextBox Text="{Binding GeneralRules}" 
                             AcceptsReturn="True" 
                             TextWrapping="Wrap" 
                             VerticalAlignment="Stretch"
                             Padding="10"> 
                    </TextBox>
                </DockPanel>
                
                <!-->Buton de salvare<-->
                <Button Grid.Row="5" 
                        Content="Salvează Configurarea" 
                        Width="180"
                        Height="38" 
                        Background="#00B4D8" 
                        Foreground="White" 
                        FontWeight="Bold" 
                        BorderThickness="0" 
                        HorizontalAlignment="Right" 
                        Cursor="Hand">
                </Button>
            </Grid>
        </Border>
        
    </Grid>
</UserControl>