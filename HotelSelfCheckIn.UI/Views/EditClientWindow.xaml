<Window x:Class="HotelSelfCheckIn.UI.Views.EditClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editeaza Client" Height="300" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    
    <!-->Partea de completare<-->
    <StackPanel Margin="20">
        
        <TextBlock Text="Nume Complet:" 
                   Margin="0,0,0,5"
                   FontWeight="Bold">
        </TextBlock>
        
        <TextBox Text="{Binding SelectedClient.Name, UpdateSourceTrigger=PropertyChanged}" 
                 Height="30" 
                 Margin="0,0,0,15" 
                 Padding="5">
        </TextBox>

        <TextBlock Text="Email:" 
                   Margin="0,0,0,5" 
                   FontWeight="Bold">
        </TextBlock>
        
        <TextBox Text="{Binding SelectedClient.Email, UpdateSourceTrigger=PropertyChanged}" 
                 Height="30" 
                 Margin="0,0,0,15"
                 Padding="5">
        </TextBox>

        <TextBlock Text="Numar Telefon:"
                   Margin="0,0,0,5" 
                   FontWeight="Bold">
        </TextBlock>
        
        <TextBox Text="{Binding SelectedClient.Phone, UpdateSourceTrigger=PropertyChanged}" 
                 Height="30" 
                 Margin="0,0,0,20"
                 Padding="5">
        </TextBox>

        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            
            <Button Content="Anuleaza" 
                    IsCancel="True"
                    Width="100" 
                    Height="30"
                    Margin="0,0,10,0">
            </Button>
            
            <Button Content="Salveaza" 
                    Command="{Binding SaveEditClientCommand}" 
                    Width="100" Height="30" 
                    Background="#00B4D8" Foreground="White" FontWeight="Bold">
            </Button>
        </StackPanel>
    </StackPanel>
</Window>