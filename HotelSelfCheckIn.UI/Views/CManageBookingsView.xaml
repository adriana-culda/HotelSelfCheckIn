<UserControl x:Class="HotelSelfCheckIn.UI.Views.CManageBookingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HotelSelfCheckIn.UI.Views"
             mc:Ignorable="d"
             d:DesignHeight="540" d:DesignWidth="780">
    
    <Grid  Background="White" 
           Margin="20">
        
        <!-->Impartirea paginii<-->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-->Textul de sus<-->
        <TextBlock Grid.Row="0" 
                   Text="My Active Reservations" 
                   FontSize="22" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20">
        </TextBlock>
        
        <!-->Afisare rezervari<-->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto">
            
            <ItemsControl ItemsSource="{Binding ActiveBookings}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White"
                                BorderBrush="#EEE"
                                BorderThickness="1" 
                                CornerRadius="8"
                                Margin="0,0,0,10"
                                Padding="15">
                            
                            <Grid>
                                
                                <!-->Detalii despre rezervare<-->
                                <StackPanel>
                                    <TextBlock Text="{Binding RoomType}"
                                               FontWeight="Bold"
                                               FontSize="16">
                                    </TextBlock>
                                    
                                    <TextBlock Text="{Binding StayInterval}"
                                               Foreground="Gray">
                                    </TextBlock>
                                    
                                    <TextBlock Text="{Binding BookingId, StringFormat='ID: {0}'}"
                                               FontSize="11"
                                               Foreground="Silver">
                                    </TextBlock>
                                </StackPanel>
                                
                                <!-->Partea de modificare/anulare a camerei<-->
                                <StackPanel Orientation="Horizontal" 
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center">
                                    
                                    <Button Content="Modify"
                                            Command="{Binding DataContext.ModifyBookingCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Margin="0,0,10,0" 
                                            Width="80" 
                                            Height="30">
                                    </Button>
                                    
                                    <Button Content="Cancel"
                                            Command="{Binding DataContext.CancelBookingCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Background="#FF4D4D" 
                                            Foreground="White"
                                            Width="80" 
                                            Height="30">
                                    </Button>
                                </StackPanel>
                            </Grid>
                            
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                
            </ItemsControl>
            
        </ScrollViewer>
        
    </Grid></UserControl>