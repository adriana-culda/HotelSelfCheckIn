<UserControl x:Class="HotelSelfCheckIn.UI.Views.AdminView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HotelSelfCheckIn.UI.Views"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid>
        <Grid.ColumnDefinitions> 
            <ColumnDefinition Width="220"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" Background="Black"> 
            <StackPanel Margin="0,20">
                <Image Source="/Assets/logo.png" 
                       Width="60" 
                       Height="60" 
                       Margin="0,0,0,10" 
                       Stretch="Uniform">
                </Image>
                <TextBlock Text="Hotel Management System" 
                           Foreground="White"
                           FontSize="14"
                           FontWeight="Bold"
                           TextAlignment="Center"
                           Margin="10,0,10,30"
                           TextWrapping="Wrap">
                </TextBlock>
                <Button Content="Dashboard"
                        Margin="0,5"
                        Height="40"
                        Background="#3E3E42"
                        Foreground="White"
                        BorderThickness="0"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        Padding="20,0,0,0">
                </Button>
                <Button Content="Client"
                        Margin="0,5"
                        Height="40"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        HorizontalAlignment="Left"
                        Padding="20,0,0,0">
                </Button>
                <Button Content="Room"
                        Margin="0,5"
                        Height="40"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        HorizontalAlignment="Left"
                        Padding="20,0,0,0">
                </Button>
                <Button Content="Reservation"
                        Margin="0,5"
                        Height="40"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        HorizontalAlignment="Left"
                        Padding="20,0,0,0">
                </Button>
                <Button Content="Setting"
                        Margin="0,5"
                        Height="40"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        HorizontalAlignment="Left"
                        Padding="20,0,0,0">
                </Button>
            </StackPanel>
        </Border>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/> <RowDefinition Height="*"/>  <RowDefinition Height="80"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Background="#00B4D8">
                <DockPanel Margin="20,0">
                    <TextBlock Text="{Binding CurrentDateTime}"
                               VerticalAlignment="Center"
                               Foreground="White"
                               FontSize="13">
                    </TextBlock>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center">
                        <TextBlock Text="{Binding AdminName, StringFormat='Welcome: {0}'}"
                                   Foreground="White"
                                   Margin="0,0,20,0"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold">
                        </TextBlock>
                        <Button Content="Log Out"
                                Foreground="White"
                                Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand">
                        </Button>
                    </StackPanel>
                </DockPanel>
            </Border>
            <WrapPanel Grid.Row="1" Grid.RowSpan="2" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0">
    
                <Border Width="250" Height="150" Background="#34495E" CornerRadius="10" Margin="20">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Path Data="M12,12A4,4 0 0,0 8,8A4,4 0 0,0 4,12A4,4 0 0,0 8,16A4,4 0 0,0 12,12M18,12A4,4 0 0,0 14,8A4,4 0 0,0 10,12A4,4 0 0,0 14,16A4,4 0 0,0 18,12" 
                              Fill="White" 
                              Stretch="Uniform" 
                              Width="40" 
                              Margin="0,0,0,10">
                        </Path>
                        <TextBlock Text="User:" 
                                   Foreground="White" 
                                   FontSize="18" 
                                   HorizontalAlignment="Center">
                        </TextBlock>
                        <TextBlock Text="{Binding TotalUsers}" 
                                   Foreground="White" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center">
                        </TextBlock>
                    </StackPanel>
                </Border>

                <Border Width="250" Height="150" Background="#AEDFF7" CornerRadius="10" Margin="20">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Path Data="M16,13C15.71,13 15.38,13 15.03,13.05C16.19,13.89 17,15 17,16.5V19H23V16.5C23,14.17 18.33,13 16,13M8,13C5.67,13 1,14.17 1,16.5V19H15V16.5C15,14.17 10.33,13 8,13Z" 
                              Fill="White" 
                              Stretch="Uniform" 
                              Width="40" 
                              Margin="0,0,0,10">
                        </Path>
                        <TextBlock Text="Client:" 
                                   Foreground="White" 
                                   FontSize="18" 
                                   HorizontalAlignment="Center">
                        </TextBlock>
                        <TextBlock Text="{Binding TotalClients}"
                                   Foreground="White" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center">
                        </TextBlock>
                    </StackPanel>
                </Border>

                <Border Width="250" Height="150" Background="#D1A3D1" CornerRadius="10" Margin="20">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Path Data="M19,7H11V10H3V5H1V20H3V17H21V20H23V11A4,4 0 0,0 19,7M7,13A3,3 0 0,0 10,10A3,3 0 0,0 7,7A3,3 0 0,0 4,10A3,3 0 0,0 7,13Z" 
                              Fill="White" 
                              Stretch="Uniform" 
                              Width="40" 
                              Margin="0,0,0,10">
                        </Path>
                        <TextBlock Text="Room:" 
                                   Foreground="White" 
                                   FontSize="18" 
                                   HorizontalAlignment="Center">
                        </TextBlock>
                        <TextBlock Text="{Binding TotalRooms}" 
                                   Foreground="White" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center">
                        </TextBlock>
                    </StackPanel>
                </Border>
                <Border Width="250" Height="150" Background="#FFB347" CornerRadius="10" Margin="20">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Path Data="M19,19H5V8H19M16,1V3H8V1H6V3H5C3.89,3 3,3.89 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5C21,3.89 20.1,3 19,3H18V1M17,12H12V17H17V12Z" 
                              Fill="White" 
                              Stretch="Uniform" 
                              Width="40" 
                              Margin="0,0,0,10"></Path>
                        <TextBlock Text="Reservations:" 
                                   Foreground="White" 
                                   FontSize="18" 
                                   HorizontalAlignment="Center">
                        </TextBlock>
                        <TextBlock Text="{Binding TotalReservations}" 
                                   Foreground="White" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center">
                        </TextBlock>
                    </StackPanel>
                </Border>            
            </WrapPanel>
        </Grid>
    </Grid>
</UserControl>
