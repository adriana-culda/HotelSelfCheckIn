<UserControl x:Class="HotelSelfCheckIn.UI.Views.AdminView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HotelSelfCheckIn.UI.Views"
             xmlns:converters="clr-namespace:HotelSelfCheckIn.UI.Converters"
             mc:Ignorable="d"
             d:DesignHeight="540" d:DesignWidth="780">
    
    <Grid Background="#F5F7FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> 
            <RowDefinition Height="*"/>    
        </Grid.RowDefinitions>

        <WrapPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,20">
            <Border Width="200" Height="120" Background="#34495E" CornerRadius="10" Margin="10">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Path Data="M12,12A4,4 0 0,0 8,8A4,4 0 0,0 4,12A4,4 0 0,0 8,16A4,4 0 0,0 12,12M18,12A4,4 0 0,0 14,8A4,4 0 0,0 10,12A4,4 0 0,0 14,16A4,4 0 0,0 18,12" 
                          Fill="White" Stretch="Uniform" Width="30" Margin="0,0,0,5"/>
                    <TextBlock Text="Users" Foreground="White" FontSize="16" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding TotalUsers}" Foreground="White" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <Border Width="200" Height="120" Background="#AEDFF7" CornerRadius="10" Margin="10">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Path Data="M16,13C15.71,13 15.38,13 15.03,13.05C16.19,13.89 17,15 17,16.5V19H23V16.5C23,14.17 18.33,13 16,13M8,13C5.67,13 1,14.17 1,16.5V19H15V16.5C15,14.17 10.33,13 8,13Z" 
                          Fill="White" Stretch="Uniform" Width="30" Margin="0,0,0,5"/>
                    <TextBlock Text="Clients" Foreground="White" FontSize="16" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding TotalClients}" Foreground="White" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <Border Width="200" Height="120" Background="#D1A3D1" CornerRadius="10" Margin="10">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Path Data="M19,7H11V10H3V5H1V20H3V17H21V20H23V11A4,4 0 0,0 19,7M7,13A3,3 0 0,0 10,10A3,3 0 0,0 7,7A3,3 0 0,0 4,10A3,3 0 0,0 7,13Z" 
                          Fill="White" Stretch="Uniform" Width="30" Margin="0,0,0,5"/>
                    <TextBlock Text="Rooms" Foreground="White" FontSize="16" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding TotalRooms}" Foreground="White" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <Border Width="200" Height="120" Background="#FFB347" CornerRadius="10" Margin="10">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Path Data="M19,19H5V8H19M16,1V3H8V1H6V3H5C3.89,3 3,3.89 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5C21,3.89 20.1,3 19,3H18V1M17,12H12V17H17V12Z" 
                          Fill="White" Stretch="Uniform" Width="30" Margin="0,0,0,5"/>
                    <TextBlock Text="Reservations" Foreground="White" FontSize="16" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding TotalReservations}" Foreground="White" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>            
        </WrapPanel>

        <Border Grid.Row="1" Background="White" CornerRadius="10" Margin="30,0,30,30" Padding="10">
            <DataGrid ItemsSource="{Binding Camere}" 
                      AutoGenerateColumns="False" 
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      Background="White"
                      BorderThickness="0"
                      GridLinesVisibility="Horizontal">
                
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nr. Cameră" Binding="{Binding Numar}" Width="100" FontWeight="Bold"/>
                    
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="150" FontWeight="Bold">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="{Binding Status, Converter={StaticResource StatusColorConverter}}"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTemplateColumn Header="Acțiuni Admin" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    
                                    <Button Content="Check In" 
                                            Command="{Binding DataContext.CheckInCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                            CommandParameter="{Binding Numar}"
                                            Background="#4CAF50" Foreground="White"
                                            Padding="10,5" Margin="0,0,10,0" BorderThickness="0">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="5"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>

                                    <Button Content="Check Out" 
                                            Command="{Binding DataContext.CheckOutCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                            CommandParameter="{Binding Numar}"
                                            Background="#F44336" Foreground="White"
                                            Padding="10,5" BorderThickness="0">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="5"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>

                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

    </Grid>
</UserControl>