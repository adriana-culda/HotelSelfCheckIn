<Window x:Class="HotelSelfCheckIn.UI.MainWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelSelfCheckIn"
        xmlns:viewmodels="clr-namespace:HotelSelfCheckIn.UI.ViewModels"
        xmlns:views="clr-namespace:HotelSelfCheckIn.UI.Views"
        mc:Ignorable="d"
        Title="Hotel Management System" Height="650" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <DataTemplate DataType="{x:Type viewmodels:LoginViewModel}">
            <views:LoginView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:AdminShellViewModel}">
            <views:AdminShellView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:ClientShellViewModel}">
            <views:ClientShellView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:CRoomSearchViewModel}">
            <views:CRoomSearchView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:CBookingViewModel}">
            <views:CBookingView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:CManageBookingsViewModel}">
            <views:CManageBookingsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:CStayHistoryViewModel}">
            <views:CStayHistoryView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:CCheckInOutViewModel}">
            <views:CCheckInOutView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:AClientListViewModel}">
            <views:AClientListView/>
        </DataTemplate>

        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <ContentControl Content="{Binding CurrentView}" />
</Window>